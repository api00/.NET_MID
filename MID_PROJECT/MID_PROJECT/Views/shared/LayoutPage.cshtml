<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        h2 {
            background-color: brown;
            padding: 30px 0px;
            text-align: center;
            text-transform: uppercase;
            font-family: 'Roboto', sans-serif;
            font-weight: 900;
            color: white;
        }

        .side-links ul {
            display: flex;
            margin: 15px;
            margin-left: 148px;
        }

        a {
            font-size: 18px;
            color: whitesmoke;
            font-weight: 400;
            border: 1px solid black;
            margin-top: 10px;
            display: inline-block;
            margin: 10px;
            padding: 10px;
            text-transform: uppercase;
            font-family: 'Roboto', sans-serif;
            font-weight: 900;
            text-decoration: none;
            background-color: brown;
            position: relative;
            z-index: 1;
        }

            a::before {
                position: absolute;
                content: "";
                height: 100%;
                width: 0;
                top: 0;
                left: 0;
                background-color: #f9bf3b;
                transition: .5s;
                z-index: -1;
            }

            a:hover::before {
                width: 100%;
                color: black;
                text-decoration: none;
                font-weight: 600;
            }

        li {
            list-style-type: none;
        }
    </style>
</head>
<body>
    <fieldset>
        <h2>Rental Property Management System </h2>
    </fieldset>

    <div class="side-links">
        <ul>
            <li><a href="/Admin/Index">Home</a> <br><br></li>
            <li><a href="">About</a><br><br></li>
            <li><a href="/Admin/blogPage">Blog</a><br><br></li>
            <li><a href="/Admin/showAppDetails">Apartment's Details</a><br><br></li>
            <li><a href="/Admin/UserDetail">View User's</a><br><br></li>
            <li><a href="">Profile</a><br><br>
            <li>
                <a href="">Chat</a><br><br>
            </li>
            <li>  <a style="float: right" class="logout-e" href="/UserDetails/Logout">LOG OUT</a></li>
        </ul>

    </div>
    <br />
    <div>
        @RenderBody()
    </div>
</body>
</html>
