
@{
    ViewBag.Title = "blogPage";
}
@{
    Layout = "~/Views/shared/LayoutPage.cshtml";
}

<html>
<head>
    <style>
        /** {
            margin: 0;
            padding: 0;
            font-family: 'Open Sans', sans-serif;
            box-sizing: border-box;
            scroll-behavior: smooth;
        }*/

        .container {
            position: absolute;
            top: calc(50% - 200px);
            left: calc(50% - 350px);
            padding: 3px;
            min-width: 700px;
            min-height: 350px;
            border: 1px solid #ddd;
            font-size: 1.2em;
            text-transform: capitalize;
            font-weight: 600;
            color: #222;
            margin-top: 14rem;
        }

        form#form {
            background-color: rgb(238 238 238 / 60%);
            width: 94%;
            min-height: 100%;
            padding: 25px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
           /* margin-top: 12rem;*/
        }

        .column {
            width: 48%;
        }

        .field {
            margin: 10px 0px;
        }

        input {
            position: relative;
            padding: 12px;
            margin-top: 10px;
            width: 100%;
            text-transform: capitalize;
            font-weight: 600;
            border: 0px;
            outline: 0;
            border-bottom: 1px solid #a7a7a7;
            border-radius: 5px;
        }

        .username label::after,
        .password label::after,
        .email label::after {
            content: "*";
            position: absolute;
            color: red;
            margin-left: 5px;
            font-size: 16px;
        }

        input::placeholder {
            color: #a7a7a7;
        }

        input.register {
            background-color: rgb(0, 153, 153);
            color: white;
            border: 0px;
            border-radius: 5px;
            padding: 12px;
            font-size: 16px;
        }

        .Brief label {
            margin-bottom: 10px;
        }

        textarea {
            margin-top: 10px;
            height: 120px;
            border: 0;
            width: 100%;
            border-radius: 5px;
            outline: 0;
            padding: 12px;
        }
        .sd {
            display: inline-block;
            width: 64%;
            text-align: center;
            position: absolute;
            content: "";
            left: 20%;
            top:33%;
        }
        h4 {
            background-color: brown;
            padding: 15px 0px;
            margin-top: 28px;
            font-size: 20px;
            color: whitesmoke;
            text-align: center;
            text-transform: uppercase;
            font-family: 'Roboto', sans-serif;
            font-weight: 900;
            position:absolute;
            content:"";
            bottom:-30%;
            width:100%
        }
    </style>
</head>
<body>
    <h2 class="sd">Add New Blog</h2>
    <div class="container">
        <form action="" method="post" id="form" enctype="multipart/form-data">
            <div class="column one">
                <div class="field username">
                    <label for="Username_">Title</label>
                    <input type="text" name="title" id="Username_" placeholder="type your tile" required>
                </div>
                <div class="field password">
                    <label for="Password_">Date</label>
                    <input type="date" name="date" id="Password_" placeholder="Enter the date" required>
                </div>
                <div class="field email">
                    <label for="Email_">Image</label>
                    <input type="file" name="File" id="Email_" placeholder="" required>
                </div>
            </div>
            <div class="column two">
                <div class="field phone">
                    <label for="Phone_">Admin ID</label>
                    <input type="text" name="a_id" value="@Session["user_id"]"  id="Phone_">
                </div>
                <div class="field Brief">
                    <label for="Brief_">brief</label>
                    <textarea name="details"></textarea>
                </div>
            </div>
            <input type="submit" value="Add" class="register">

        </form>
        <a href="/Admin/showblg">Show Blogs</a>
    </div>
    <h4>Copyright© 2022-2023 by Api Alam, All Rights Reserved.</h4>

</body>
</html>
